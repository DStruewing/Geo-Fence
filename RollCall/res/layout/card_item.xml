<?xml version="1.0" encoding="utf-8"?>
<!-- the parent view - provides the listfragment background color -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_gravity="center"
    android:padding="5dp" >
    
    <!-- the innner view - provides the grey rectangle -->
    <RelativeLayout android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/frame" >
        
        <!-- the icon view -->
        <ImageView android:id="@+id/card_icon"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:padding="5dp"
            android:contentDescription="Icon"
            android:scaleType="fitXY"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical" />
        
        <!-- the container view for the title and description -->
        <RelativeLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/card_icon"
            android:gravity="top"
            android:padding="10dp" >
            
            <!-- the title view -->
            <TextView android:id="@+id/card_course_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Medium" />
            
            <!-- the description view -->
            <TextView android:id="@+id/card_teacher_name"
                android:layout_below="@id/card_course_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Small" />
            

        </RelativeLayout>   
        
    </RelativeLayout>
    
</RelativeLayout>